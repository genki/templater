#!/usr/bin/env ruby

# this is only an example of how the bin file for a generator based on Templater might look,
# it's not meant to actually be used for anything useful, which is why it is not loaded into the path

require File.join(File.dirname(__FILE__), '..', 'lib', 'templater.rb')

generators = Templater::Manifold.new

# this would usually be defined in a separate file
class SomeGenerator < Templater::Generator
  
  first_argument :monkey, :default => 'blah'
  
  template :bin, 'templater', 'copy.rb'
    
  def source_root
    File.dirname(__FILE__)
  end
end

options = Templater::Parser.parse(ARGV)

puts ARGV.inspect

SomeGenerator.new(File.dirname(__FILE__), {}, *ARGV).invoke!

puts 'test<%= monkey %>'